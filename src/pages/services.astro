---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';

const services = [
  {
    title: "OEM Manufacturing",
    description: "Transform your designs into premium infantwear with our precision manufacturing expertise. Every stitch reflects our commitment to excellence.",
    icon: "factory",
    features: [
      "Custom design implementation",
      "Premium material sourcing",
      "Scalable production capacity",
      "Quality assurance & testing"
    ]
  },
  {
    title: "ODM Development",
    description: "From concept to market-ready products, our design team brings your vision to life with innovative solutions and technical mastery.",
    icon: "lightbulb",
    features: [
      "Design consultation",
      "Prototype development",
      "Technical pattern creation",
      "Cost optimization"
    ]
  },
  {
    title: "Private Label",
    description: "Launch your brand instantly with our curated collections. Premium quality meets rapid deployment for market success.",
    icon: "tag",
    features: [
      "Ready-to-brand products",
      "Custom packaging",
      "Low minimum orders",
      "Fast turnaround"
    ]
  },
  {
    title: "Premium Packaging",
    description: "Elevate your brand presence with luxury packaging that creates memorable unboxing experiences and drives customer loyalty.",
    icon: "gift",
    features: [
      "Custom gift boxes",
      "Premium hang tags",
      "Eco-friendly options",
      "Brand integration"
    ]
  }
];

const capabilities = [
  {
    title: "ISO 9001:2015 Certified",
    description: "Internationally recognized quality management system ensuring consistent excellence across every production run."
  },
  {
    title: "OEKO-TEX & GOTS Certified",
    description: "Safe, organic materials meeting the highest global standards for infant safety and environmental responsibility."
  },
  {
    title: "Global Export Ready",
    description: "Seamless logistics and full documentation support for worldwide distribution to 30+ countries."
  }
];

const processSteps = [
  {
    title: "Strategic Consultation",
    description: "We dive deep into your brand vision, market positioning, and production requirements to craft a tailored manufacturing strategy."
  },
  {
    title: "Design & Development",
    description: "Our expert team transforms concepts into technical specifications, creating samples that exceed expectations."
  },
  {
    title: "Precision Production",
    description: "Advanced manufacturing with real-time quality control ensures every piece meets our exacting standards."
  },
  {
    title: "Global Delivery",
    description: "Professional packaging and comprehensive logistics ensure your products reach their destination perfectly."
  }
];
---

<Layout title="Services - Kids Kreations">
  <Navigation />
  
  <main>
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1>Manufacturing Excellence</h1>
          <p>Where innovation meets precision. We transform your infantwear vision into premium products that families trust worldwide.</p>
        </div>
      </div>
    </section>

    <section class="services">
      <div class="container">
        <div class="services-grid">
          {services.map(service => (
            <div class="service-card fade-in">
              <div class="service-icon">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  {service.icon === "factory" && (
                    <path d="M3 21h18M5 21V7l8-4v18M19 21V11l-6-4M9 9h1M9 13h1M9 17h1M14 13h1M14 17h1"/>
                  )}
                  {service.icon === "lightbulb" && (
                    <path d="M9 21h6M10 21v-4a4 4 0 0 1 4-4h0a4 4 0 0 1 4 4v4M9 3h6M12 3v2M9 7h6M9 11h6"/>
                  )}
                  {service.icon === "tag" && (
                    <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82zM7 7h.01"/>
                  )}
                  {service.icon === "gift" && (
                    <path d="M20 12v10H4V12M22 7H2v5h20V7zM12 22V7M7 7h10M7 7a2 2 0 0 1-2-2 2 2 0 0 1 2-2c2 0 4 4 6 4s4-4 6-4a2 2 0 0 1 2 2 2 2 0 0 1-2 2"/>
                  )}
                </svg>
              </div>
              <h3>{service.title}</h3>
              <p>{service.description}</p>
              <ul class="service-features">
                {service.features.map(feature => (
                  <li>
                    <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20,6 9,17 4,12"/>
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="capabilities">
      <div class="container">
        <div class="section-header">
          <h2>Manufacturing Capabilities</h2>
          <p>Certified excellence that opens doors to global markets</p>
        </div>
        <div class="capabilities-grid">
          {capabilities.map(capability => (
            <div class="capability-item fade-in">
              <div class="capability-icon">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
              <h3>{capability.title}</h3>
              <p>{capability.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="process">
      <div class="container">
        <div class="section-header">
          <h2>Our Partnership Journey</h2>
          <p>A proven process refined over decades of manufacturing excellence</p>
        </div>
        <div class="process-timeline">
          {processSteps.map((step, index) => (
            <div class="process-step fade-in" data-step={index + 1}>
              <div class="step-connector"></div>
              <div class="step-content">
                <div class="step-number">{index + 1}</div>
                <h3>{step.title}</h3>
                <p>{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="cta">
      <div class="container">
        <div class="cta-content">
          <h2>Ready to Elevate Your Brand?</h2>
          <p>Join the ranks of premium infantwear brands who trust us to bring their vision to life. Let's create something extraordinary together.</p>
          <a href="/contact" class="button button-primary">
            <span>Start Your Project</span>
            <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"/>
              <polyline points="12,5 19,12 12,19"/>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    padding: 120px 0 80px;
    text-align: center;
    position: relative;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="1" fill="rgba(44,95,155,0.05)"/></svg>') repeat;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-content h1 {
    font-size: 4rem;
    font-weight: 800;
    color: #1e293b;
    margin-bottom: 24px;
    line-height: 1.1;
  }

  .hero-content p {
    font-size: 1.25rem;
    color: #64748b;
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-header h2 {
    font-size: 3rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 16px;
  }

  .section-header p {
    font-size: 1.125rem;
    color: #64748b;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .services {
    padding: 100px 0;
    background: white;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .service-card {
    background: white;
    padding: 48px;
    border-radius: 16px;
    border: 1px solid #e2e8f0;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #2C5F9B, #E8B86D);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    border-color: #cbd5e1;
  }

  .service-card:hover::before {
    transform: scaleX(1);
  }

  .service-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, #2C5F9B, #4A7BB8);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 24px;
    transition: all 0.3s ease;
  }

  .service-card:hover .service-icon {
    transform: scale(1.05);
    background: linear-gradient(135deg, #1A3B5C, #2C5F9B);
  }

  .icon {
    width: 32px;
    height: 32px;
    color: white;
  }

  .service-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 16px;
  }

  .service-card p {
    color: #64748b;
    margin-bottom: 24px;
    line-height: 1.6;
    font-size: 1rem;
  }

  .service-features {
    list-style: none;
    padding: 0;
  }

  .service-features li {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
    color: #475569;
    font-weight: 500;
  }

  .check-icon {
    width: 18px;
    height: 18px;
    color: #10b981;
    margin-right: 12px;
    flex-shrink: 0;
  }

  .capabilities {
    padding: 100px 0;
    background: #f8fafc;
  }

  .capabilities-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .capability-item {
    text-align: center;
    padding: 40px 24px;
    background: white;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
    transition: all 0.3s ease;
  }

  .capability-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.06);
  }

  .capability-icon {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, #E8B86D, #f39c12);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
  }

  .capability-item h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 12px;
  }

  .capability-item p {
    color: #64748b;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .process {
    padding: 100px 0;
    background: white;
  }

  .process-timeline {
    position: relative;
    max-width: 1000px;
    margin: 0 auto;
  }

  .process-timeline::before {
    content: '';
    position: absolute;
    top: 40px;
    left: 50%;
    transform: translateX(-50%);
    width: 2px;
    height: calc(100% - 80px);
    background: linear-gradient(180deg, #2C5F9B 0%, #E8B86D 100%);
    opacity: 0.3;
  }

  .process-step {
    display: flex;
    align-items: center;
    margin-bottom: 60px;
    position: relative;
  }

  .process-step:nth-child(even) {
    flex-direction: row-reverse;
  }

  .step-connector {
    flex: 1;
    height: 2px;
    background: linear-gradient(90deg, #e2e8f0 0%, #cbd5e1 100%);
    position: relative;
  }

  .process-step:nth-child(odd) .step-connector {
    margin-right: 40px;
  }

  .process-step:nth-child(even) .step-connector {
    margin-left: 40px;
  }

  .step-number {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #2C5F9B, #E8B86D);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    box-shadow: 0 8px 24px rgba(44, 95, 155, 0.2);
    position: relative;
    z-index: 2;
    flex-shrink: 0;
  }

  .step-content {
    background: #f8fafc;
    padding: 32px;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
    transition: all 0.3s ease;
    flex: 1;
    max-width: 400px;
  }

  .step-content:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.06);
  }

  .step-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 12px;
  }

  .step-content p {
    color: #64748b;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .cta {
    background: linear-gradient(135deg, #1e293b 0%, #2C5F9B 50%, #4A7BB8 100%);
    color: white;
    padding: 100px 0;
    text-align: center;
    position: relative;
  }

  .cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><polygon points="50,10 90,90 10,90" fill="rgba(255,255,255,0.03)"/></svg>') repeat;
  }

  .cta-content {
    position: relative;
    z-index: 2;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta h2 {
    color: white;
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 24px;
  }

  .cta p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 40px;
    font-size: 1.125rem;
    line-height: 1.7;
  }

  .button-primary {
    background: white;
    color: #2C5F9B;
    border: none;
    padding: 16px 32px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1.125rem;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 12px;
    transition: all 0.3s ease;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .button-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.2);
  }

  .arrow-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .button-primary:hover .arrow-icon {
    transform: translateX(4px);
  }

  /* Animation classes */
  .fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
  }

  .fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 1024px) {
    .hero-content h1 {
      font-size: 3rem;
    }
    
    .section-header h2 {
      font-size: 2.5rem;
    }
    
    .services-grid {
      grid-template-columns: 1fr;
      gap: 32px;
    }
    
    .capabilities-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .process-step {
      flex-direction: column;
      text-align: center;
    }
    
    .process-step:nth-child(even) {
      flex-direction: column;
    }
    
    .process-timeline::before {
      display: none;
    }
    
    .step-connector {
      display: none;
    }
    
    .step-content {
      max-width: none;
      margin-top: 24px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 80px 0 60px;
    }
    
    .hero-content h1 {
      font-size: 2.5rem;
    }
    
    .section-header h2 {
      font-size: 2rem;
    }
    
    .services,
    .capabilities,
    .process,
    .cta {
      padding: 60px 0;
    }
    
    .service-card {
      padding: 32px;
    }
    
    .capabilities-grid {
      grid-template-columns: 1fr;
    }
    
    .cta h2 {
      font-size: 2rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Intersection Observer for fade-in animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, observerOptions);

    // Observe all fade-in elements
    document.querySelectorAll('.fade-in').forEach(el => {
      observer.observe(el);
    });

    // Add staggered animation delay to service cards
    document.querySelectorAll('.service-card').forEach((card, index) => {
      card.style.transitionDelay = `${index * 100}ms`;
    });

    // Add staggered animation delay to process steps
    document.querySelectorAll('.process-step').forEach((step, index) => {
      step.style.transitionDelay = `${index * 150}ms`;
    });
  });
</script> 