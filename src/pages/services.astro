---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import factory3d from '/src/assets/icons/corporate.svg';
import dummy from '/src/assets/icons/dummy.svg';
import employee from '/src/assets/icons/employee-have-many-new-ideas.svg';
import stiching from '/src/assets/icons/stitching-machine.svg';
import exporticon from '/src/assets/icons/export.svg';
import orgcotton from '/src/assets/icons/ecogots.svg';
import isologo from '/src/assets/icons/iso.svg';
import design1 from '/src/assets/icons/design1.svg';
import design2 from '/src/assets/icons/design2.svg';
import strategyicon from '/src/assets/icons/strategy.svg';
import productionicon from '/src/assets/icons/production.svg';
import truck1 from '/src/assets/icons/truck1.svg';
import truck2 from '/src/assets/icons/truck2.svg';
import gearicon from '/src/assets/icons/gear.svg';
import packaging from '/src/assets/icons/gift.svg';

const services = [
  {
    title: "Your Designs, Our Factory",
    subhead: "OEM Manufacturing for Custom Infantwear",
    description: "Transform your designs into premium infantwear with our precision manufacturing expertise. Every stitch reflects our commitment to excellence.",
    icon: [factory3d],
    features: [
      "Production-ready sampling from tech packs or physical references",
      "Sourcing support for organic, bamboo, or custom-dyed fabrics",
      "Cut & sew manufacturing with optional embellishments",
      "Factory-grade QC checks with internal audit tracking"
    ]
  },
  {
    title: "Bring Your Product to Life",
    subhead: "ODM Services from Concept to Pre-Production",
    description: "From concept to market-ready products, our design team brings your vision to life with innovative solutions and technical mastery.",
    icon: [employee],
    features: [
      "Full product development: sketches, fit samples, labelling",
      "Pattern making and grading for size accuracy",
      "Material suggestion and cost balancing based on budget",
      "Ideal for launching original ideas from scratch"
    ]
  },
  {
    title: "Launch-Ready Collections",
    subhead: "Private Label Garments, Packaged and Ready to Sell",
    description: "Launch your brand instantly with our curated collections. Premium quality meets rapid deployment for market success.",
    icon: [dummy],
    features: [
      "Pre-designed infantwear styles with your logo applied",
      "Flexible MOQs starting at 200 pieces per style",
      "Pre-set fabric and color combos to reduce lead time",
      "Fast relabeling and branded packaging options"
    ]
  },
  {
    title: "Packaging That Sells",
    subhead: "Custom Packaging for Brand Impact",
    description: "Elevate your brand presence with luxury packaging that creates memorable unboxing experiences and drives customer loyalty.",
    icon: [packaging],
    features: [
      "Custom box design for retail, gifting, or DTC",
      "Organic cotton bag and hangtag sourcing available",
      "Barcoding and SKU labeling for fulfillment centers",
      "Sustainable packaging options on request"
    ]
  }
];

const capabilities = [
  {
    title: "ISO 9001:2015 Certified",
    description: "Internationally recognized quality management system ensuring consistent excellence across every production run.",
    icon: isologo
  },
  {
    title: "OEKO-TEX & GOTS Certified",
    description: "Safe, organic materials meeting the highest global standards for infant safety and environmental responsibility.",
    icon: orgcotton
  },
  {
    title: "Global Export Ready",
    description: "Seamless logistics and full documentation support for worldwide distribution to 30+ countries.",
    icon: exporticon
  }
];

const processSteps = [
  {
    title: "Strategic Consultation",
    description: "Clarify your brand goals and production needs with our manufacturing experts. We'll analyze your market position and create a tailored production strategy.",
    icon: strategyicon,
    className: 'strategy-icon-large'
  },
  {
    title: "Design & Development",
    description: "We turn your vision into tech packs, prototypes, and approval-ready samples. Our design team ensures every detail meets your specifications.",
    icon: design1
  },
  {
    title: "Precision Production",
    description: "Advanced manufacturing with real-time quality control ensures every piece meets our exacting standards. We maintain consistent quality across all production runs.",
    icon: productionicon
  },
  {
    title: "Global Delivery",
    description: "Professional packaging and comprehensive logistics ensure your products reach their destination perfectly. We handle all documentation and shipping requirements.",
    icon: truck1
  }
];
---

<Layout title="Services - Kids Kreations">
  <Navigation />
  
  <main>
    <section class="hero services-hero">
      <div class="container">
        <div class="section-title">
          <h1>Our Services</h1>
          <p>From concept to delivery, we offer end-to-end manufacturing solutions.</p>
        </div>
      </div>
    </section>

    <section class="services">
      <div class="container">
        <div class="services-grid">
          {services.map(service => (
            <div class="service-card fade-in">
              <div class="service-icon">
                {service.icon.map((icon, index) => (
                  <>
                    <div class={`icon-wrapper icon-wrapper-${index + 1}`}>
                      <Image 
                        src={icon} 
                        alt={`${service.title} icon ${index + 1}`}
                        class="icon"
                        width={48}
                        height={48}
                        loading="eager"
                      />
                    </div>
                  </>
                ))}
              </div>
              <div class="service-content">
                <h3>{service.title}</h3>
                <p class="service-subhead">{service.subhead}</p>
                <p class="service-description">{service.description}</p>
                <ul class="service-features">
                  {service.features.map(feature => (
                    <li>
                      <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20,6 9,17 4,12"/>
                      </svg>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
                <div class="service-cta">
                  <a href="/contact" class="learn-more-link">
                    Learn More →
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="capabilities">
      <div class="container">
        <div class="section-header">
          <h2>Manufacturing Capabilities</h2>
          <p>Certified excellence that opens doors to global markets</p>
        </div>
        <div class="capabilities-grid">
          {capabilities.map(capability => (
            <div class="capability-item fade-in">
              <div class="capability-icon">
                <Image 
                  src={capability.icon} 
                  alt={`${capability.title} icon`}
                  width={48}
                  height={48}
                  class="cap-icon"
                />
              </div>
              <h3>{capability.title}</h3>
              <p>{capability.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="process">
      <div class="container">
        <div class="section-header">
          <h2>Our Partnership Journey</h2>
          <p>A proven process refined over decades of manufacturing excellence</p>
        </div>
        <div class="process-grid">
          {processSteps.map((step, index) => (
            <div class="process-card fade-in" data-step={index + 1}>
              <div class="process-icon">
                <Image 
                  src={step.icon} 
                  alt={`${step.title} icon`}
                  width={step.className ? 56 : 48}
                  height={step.className ? 56 : 48}
                  class={`process-svg ${step.className || ''}`}
                />
              </div>
              <div class="process-number">{index + 1}</div>
              <h3>{step.title}</h3>
              <p>{step.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="cta">
      <div class="container">
        <div class="cta-content">
          <h2>Ready to Elevate Your Brand?</h2>
          <p>Join the growing list of premium infantwear labels who partner with us to turn bold ideas into beautiful products. Let’s build something exceptional together.</p>
          <a href="/contact" class="button button-primary">
            <span>Start Your Project</span>
            <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"/>
              <polyline points="12,5 19,12 12,19"/>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .services-hero {
    background: linear-gradient(to right, var(--primary-light), var(--background));
    padding: var(--spacing-xl) 0;
    text-align: center;
  }

  .section-title {
    max-width: 800px;
    margin: 0 auto;
  }

  .section-title h1 {
    font-family: 'DM Serif Display', serif;
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .section-title p {
    font-size: 1.25rem;
    color: #64748b;
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    font-size: 3rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 16px;
  }

  .section-header p {
    font-size: 1.125rem;
    color: #64748b;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .services {
    padding: 60px 0;
    background: white;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .service-card {
    background: white;
    padding: 32px;
    border-radius: 16px;
    border: 1px solid #e2e8f0;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .service-card::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #2C5F9B, #E8B86D);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
    border-color: #cbd5e1;
  }

  .service-card:hover::before {
    transform: scaleX(1);
  }

  .service-icon {
    position: relative;
    height: 80px;
    margin-bottom: 24px;
  }

  .icon-wrapper {
    position: absolute;
    top: 0;
    width: 80px;
    height: 80px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .icon-wrapper-1 {
    left: 15%;
    transform: translateX(-50%);
    z-index: 2;
  }

  .icon-wrapper-2 {
    left: 15%;
    transform: translateX(calc(-50% + 80px + 8px));
    z-index: 1;
  }

  .service-card:hover .icon-wrapper {
    transform: scale(1.05) translateX(-50%);
  }

  .service-card:hover .icon-wrapper-2 {
    transform: scale(1.05) translateX(calc(-50% + 80px + 8px));
  }

  .icon {
    width: 100% !important;
    height: 100% !important;
    object-fit: contain;
  }

  .service-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .service-card h3 {
    font-size: 1.8rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .service-subhead {
    font-size: 0.9rem;
    color: #5a6478;
    font-weight: 550;
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .service-description {
    color: #64748b;
    margin-bottom: 24px;
    line-height: 1.6;
    font-size: 1rem;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0;
    flex: 1;
  }

  .service-features li {
    display: flex;
    align-items: flex-start;
    margin-bottom: 12px;
    color: #475569;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .check-icon {
    width: 16px;
    height: 16px;
    color: #10b981;
    margin-right: 12px;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .service-cta {
    margin-top: 24px;
    padding-top: 16px;
    border-top: 1px solid #f1f5f9;
  }

  .learn-more-link {
    color: #2C5F9B;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
  }

  .learn-more-link:hover {
    color: #1e40af;
    transform: translateX(4px);
  }

  .capabilities {
    padding: 60px 0;
    background: #f8fafc;
  }

  .capabilities-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .capability-item {
    text-align: center;
    padding: 32px 20px;
    background: white;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
    transition: all 0.3s ease;
  }

  .capability-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.06);
  }

  .capability-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px auto;
  }

  .cap-icon {
    width: 48px !important;
    height: 48px !important;
    object-fit: contain;
    display: block;
  }

  .capability-item h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 12px;
  }

  .capability-item p {
    color: #64748b;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .process {
    padding: 60px 0;
    background: white;
  }

  .process-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .process-card {
    background: white;
    padding: 32px;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
    transition: all 0.3s ease;
    position: relative;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .process-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #2C5F9B, #E8B86D);
    border-radius: 12px 12px 0 0;
  }

  .process-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.08);
    border-color: #cbd5e1;
  }

  .process-icon {
    width: 68px;
    height: 68px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
    transition: all 0.3s ease;
  }

  .process-card:hover .process-icon {
    transform: scale(1.05);
    background: linear-gradient(135deg, #e3ebf3, #b6c8dd);
  }

  .process-icon .icon {
    width: 28px;
    height: 28px;
    color: white;
  }

  .process-number {
    position: absolute;
    top: -12px;
    right: 20px;
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, #E8B86D, #f39c12);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    font-weight: 700;
    border: 2px solid white;
    box-shadow: 0 4px 12px rgba(232, 184, 109, 0.3);
  }

  .process-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 12px;
  }

  .process-card p {
    color: #64748b;
    line-height: 1.6;
    font-size: 0.95rem;
    margin: 0;
  }

  .cta {
    background: linear-gradient(135deg, #1e293b 0%, #2C5F9B 50%, #4A7BB8 100%);
    color: white;
    padding: 80px 0;
    text-align: center;
    position: relative;
  }

  .cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><polygon points="50,10 90,90 10,90" fill="rgba(255,255,255,0.03)"/></svg>') repeat;
  }

  .cta-content {
    position: relative;
    z-index: 2;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta h2 {
    color: white;
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 24px;
  }

  .cta p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 32px;
    font-size: 1.125rem;
    line-height: 1.7;
  }

  .button-primary {
    background: white;
    color: #2C5F9B;
    border: none;
    padding: 16px 32px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1.125rem;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 12px;
    transition: all 0.3s ease;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .button-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.2);
  }

  .arrow-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .button-primary:hover .arrow-icon {
    transform: translateX(4px);
  }

  /* Animation classes */
  .fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
  }

  .fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 1024px) {
    .section-header h2 {
      font-size: 2.5rem;
    }
    
    .services-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }
    
    .service-card {
      padding: 28px;
    }
    
    .service-card h3 {
      font-size: 1.375rem;
    }
    
    .capabilities-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .process-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }
    
    .process-card {
      padding: 24px;
    }
  }

  @media (max-width: 768px) {
    .section-header h2 {
      font-size: 2rem;
    }
    
    .services,
    .capabilities,
    .process,
    .cta {
      padding: 40px 0;
    }
    
    .service-card {
      padding: 24px;
    }
    
    .capabilities-grid {
      grid-template-columns: 1fr;
    }
    
    .cta h2 {
      font-size: 2rem;
    }
  }
</style>

<script>
  // Script to fade in elements on scroll
  document.addEventListener("DOMContentLoaded", () => {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          (entry.target as HTMLElement).style.opacity = "1";
          (entry.target as HTMLElement).style.transform = "translateY(0)";
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.fade-in').forEach((el) => {
      observer.observe(el);
    });
  });
</script> 